<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/keyLine_4"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/keyLine_4"
            android:text="@string/house_warming_party"
            android:textAppearance="?textAppearanceHeadline1"
            android:textSize="@dimen/textSize_8"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/keyLine_12"
            android:layout_height="@dimen/keyLine_1"
            android:background="?colorPrimary"
            android:backgroundTint="?colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/keyLine_4"
            android:text="@string/subtitle_dashboard"
            android:textAppearance="?textAppearanceBody1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userPins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>